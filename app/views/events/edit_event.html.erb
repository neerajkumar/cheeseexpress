							<td align="right" width="150">
								<span class="required"><br /><br />*</span>
								<span class="bold" valign="middle"><%=t 'events.first_left_content'-%>: </span>
							</td>
							<td align="left" colspan="2" id="event_edit">
								<%= textile_editor 'event', 'first_left_content', :size => "70X4" -%>
							</td>
						</tr>
						<tr valign="middle">
							<td align="right" width="150">
								<span class="required"><br /><br />*</span>
								<span class="bold"><%=t 'events.first_left_content_in_french'-%>: </span>
							</td>
							<td align="left"colspan="2" id="event_edit">
